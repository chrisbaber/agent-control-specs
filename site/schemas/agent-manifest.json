{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Agent Manifest",
  "type": "object",
  "properties": {
    "did": {
      "type": "string",
      "description": "Decentralized Identifier or unique Agent ID"
    },
    "ver": {
      "type": "string",
      "description": "Version of the manifest/agent"
    },
    "capabilities": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of capabilities (CTX-1 strings)"
    },
    "owner": {
      "type": "string",
      "description": "Owner or Tenant ID"
    }
  },
  "required": ["did", "ver", "capabilities", "owner"]
}
